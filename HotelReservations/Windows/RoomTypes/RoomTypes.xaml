<Window x:Class="HotelReservations.Windows.RoomTypes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservations.Windows"
        mc:Ignorable="d"
        Title="Room Types" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Room type:" VerticalContentAlignment="Center"/>
            <TextBox Name="RoomTypeSearchTextBox" Height="24" Width="150" Margin="3" VerticalContentAlignment="Center" PreviewKeyUp="RoomTypeSearchTB_PreviewKeyUp"/>
        </StackPanel>

        <ToolBar Grid.Row="1">
            <Button Name="AddButton" Content="Add" BorderBrush="Black" Padding="5,0,5,0" Click="AddButton_Click"></Button>
            <Button Name="EditButton" Content="Edit" BorderBrush="Black" Padding="5,0,5,0" Margin="5,0,0,0" Click="EditButton_Click"></Button>
            <Button Name="DeleteButton" Content="Delete" BorderBrush="Black" Padding="5,0,5,0" Margin="5,0,0,0" Click="DeleteButton_Click"></Button>
        </ToolBar>

        <DataGrid SelectionMode="Single" Grid.Row="2" Name="RoomTypesDataGrid" IsReadOnly="True" AutoGeneratingColumn="RoomTypesDataGrid_AutoGeneratingColumn">

        </DataGrid>

    </Grid>
</Window>
